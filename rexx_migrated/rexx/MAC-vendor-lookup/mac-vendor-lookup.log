0001 /*REXX pgm shows a network device's manufacturer based on the Media Access Control addr.*/
0002 win_command         = 'getmac'                   /*name of the Microsoft Windows command*/
0003 win_command_options = '/v /fo list'              /*options  of     "        "       "   */
0004 ?3= 'Network Adapter:'                           /*search keywords for Network Adapter. */
0005 ?4= 'Physical Address:'                          /*   "       "     "  Physical Address.*/
0006 upper ?3 ?4                                      /*uppercase in case for capitol letters*/
0007 @.=;            @.0= 0                           /*just─in─case values for the keywords.*/
0008 rc= 0                                            /*  "   "   "  value for the returnCode*/
0009 address system win_command win_command_options   with   output stem @.  /*issue command.*/
0010 if rc\==0  then do                               /*display an error if not successful.  */
0011 say
0012 say '***error*** from command: '     win_command     win_command_options
0013 say 'Return code was: '    rc
0014 say
0015 exit rc
0016 end
0017 MACaddr=.                                        /*just─in─case value for the keyword.  */
0018 maker=.                                          /*  "   "   "    "    "   "     "      */
0019 do j=1  for @.0;  $= @.j;  upper $    /*parse each of the possible responses.*/
0020 if left($, length(?3))=?3  then maker=   subword(@.j, 3)   /*is this the one?*/
0021 if left($, length(?4))=?4  then MACaddr= word(@.j, 3)      /* "   "   "   "  */
0022 end   /*k*/
0023 /* [↑]  Now, display good or bad stuff.*/
0024 if maker=. | MACaddr==.  then say 'MAC address manufacturer not found.'
0025 else say 'manufacturer for MAC address  '  MACaddr "  is  " maker
0026 exit 0                                           /*stick a fork in it,  we're all done. */
