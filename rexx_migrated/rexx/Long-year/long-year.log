0001 /*REXX program determines If a (calendar) year is a short or long  year */
0002 /*                                                    (52 or 53 weeks). */
0003 Parse Arg lo hi .                              /* obtain optional args. */
0004 current=left(date('S'),4)
0005 If lo=='' | lo=="," | lo=='*' Then lo=current  /*Not given? Use default.*/
0006 If hi=='' | hi==","           Then hi=lo       /* "    "     "     "    */
0007 If                    hi=='*' Then hi=current  /*an asterisk: current yr*/
0008 
0009 Do yr=lo To hi                        /* process single yr  or range of */
0010 Say '     year ' yr ' is a ',
0011 right(word('short long',is_long(yr)+1),5) ' year'
0012 End
0013 Exit
0014 /*----------------------------------------------------------------------*/
0015 wd_1231:
0016 /*************************************************************************
0017 * returns the day of the week of 31 December year
0018 *************************************************************************/
0019 Parse Arg year
0020 Return (year+year%4-year%100+year%400)//7
0021 
0022 is_long:
0023 Parse Arg year
0024 Return wd_1231(year)==4 |,    /* year ends in a Thursday              */
0025 wd_1231(year-1)==3     /* or previous year ends in a Wednesday */
