0001 /*REXX program  sums  the  decimal digits  of natural numbers in any base up to base 36.*/
0002 parse arg z                                      /*obtain optional argument from the CL.*/
0003 if z='' | z=","  then z= '1 1234 fe f0e +F0E -666.00 11111112222222333333344444449'
0004 do j=1  for words(z);     _=word(z, j)   /*obtain a number from the list.       */
0005 say right(sumDigs(_), 9)    ' is the sum of the digits for the number '    _
0006 end   /*j*/
0007 exit                                             /*stick a fork in it,  we're all done. */
0008 /*──────────────────────────────────────────────────────────────────────────────────────*/
0009 sumDigs: procedure;  arg x;  @=123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ;  $=0
0010 do k=1  to length(x);   $=$ + pos( substr(x, k, 1), @);  end /*k*/
0011 return $
