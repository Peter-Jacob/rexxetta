0001 /*REXX program simulates a 7─sided die based on a 5─sided throw for a number of trials. */
0002 parse arg trials sample seed .                   /*obtain optional arguments from the CL*/
0003 if trials=='' | trials=","  then trials=       1 /*Not specified?  Then use the default.*/
0004 if sample=='' | sample=","  then sample= 1000000 /* "      "         "   "   "     "    */
0005 if datatype(seed, 'W')  then call random ,,seed  /*Integer?  Then use it as a RAND seed.*/
0006 L= length(trials)                                /* [↑]  one million samples to be used.*/
0007 
0008 do #=1  for trials;            die.= 0        /*performs the number of desired trials*/
0009 k= 0
0010 do  until k==sample;           r= 5 * random(1, 5)  +  random(1, 5)  -  6
0011 if r>20  then iterate
0012 k= k + 1;                      r= r // 7  +  1;          die.r= die.r + 1
0013 end   /*until*/
0014 say
0015 expect= sample % 7
0016 say center('trial:' right(#, L)    "   "     sample  'samples, expect' expect, 80, "─")
0017 
0018 do j=1  for 7
0019 say '      side'      j       "had "       die.j           ' occurrences',
0020 '      difference from expected:'right(die.j - expect, length(sample) )
0021 end   /*j*/
0022 end   /*#*/                                   /*stick a fork in it,  we're all done. */
