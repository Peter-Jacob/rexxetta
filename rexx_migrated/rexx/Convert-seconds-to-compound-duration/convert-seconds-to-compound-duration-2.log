0001 /*rexx program  demonstrates  how to convert a number of seconds  to  bigger time units.*/
0002 parse arg @;  if @=''  then @=7259 86400 6000000 /*Not specified?  Then use the default.*/
0003 
0004 do j=1  for words(@);       z= word(@, j) /* [↓]  process each number in the list*/
0005 say right(z, 25) 'seconds:  '  convSec(z) /*convert a number to bigger time units*/
0006 end   /*j*/
0007 exit                                             /*stick a fork in it,  we're all done. */
0008 /*──────────────────────────────────────────────────────────────────────────────────────*/
0009 convSec: parse arg x                             /*obtain a number from the argument.   */
0010 w= timeU( 60*60*24*7,  'wk'  )          /*obtain number of weeks     (if any). */
0011 d= timeU( 60*60*24  ,  'd'   )          /*   "      "    " days        "  "    */
0012 h= timeU( 60*60     ,  'hr'  )          /*   "      "    " hours       "  "    */
0013 m= timeU( 60        ,  'min' )          /*   "      "    " minutes     "  "    */
0014 s= timeU( 1         ,  'sec' )          /*   "      "    " seconds     "  "    */
0015 if x\==0  then s=word(s 0, 1) + x 'sec' /*handle fractional (residual) seconds.*/
0016 $=strip(space(w d h m s),,",");      if $==''  then z= 0 "sec"  /*handle 0 sec.*/
0017 return  $
0018 /*──────────────────────────────────────────────────────────────────────────────────────*/
0019 timeU:   parse arg u,$;   _= x%u;   if _==0  then return '';   x= x - _*u;   return _ $","
