0001 /*REXX program  converts  Roman numeral number(s)  ───►  Arabic numerals  (or numbers). */
0002 rYear = 'MCMXC'    ;      say right(rYear, 9)":"     rom2dec(rYear)
0003 rYear = 'mmviii'   ;      say right(rYear, 9)":"     rom2dec(rYear)
