0004 Parse Arg fid
0005 If fid='' Then Do
0006 "ALLOC FI(IN) DA('N561985.PRIV.V100(LL)') SHR REUSE"
0007 'EXECIO * DISKR IN (STEM L. FINIS'   /* read all lines             */
0008 'FREE FI(IN)'
0009 End
0010 Else Do
0011 Do i=1 By 1 While lines(fid)>0
0012 l.i=linein(fid)
0013 End
0014 l.0=i-1
0015 End
0016 maxl = 0                               /* initialize maximum length  */
0017 Do i=1 To l.0                          /* loop through all lines     */
0018 linl=length(l.i)                     /* length of current line     */
0019 Select
0020 When linl>maxl Then Do             /* line longer than preceding */
0021 maxl=linl                        /* initialize maximum length  */
0022 mem.0=1                          /* memory has one entry       */
0023 mem.1=l.i                        /* the current line           */
0024 lin.1=i                          /* its line number            */
0025 End
0026 When linl=maxl Then Do             /* line as long as maximum    */
0027 z=mem.0+1                        /* new memory index           */
0028 mem.z=l.i                        /* the current line           */
0029 lin.z=i                          /* its line number            */
0030 mem.0=z                          /* memory size                */
0031 End
0032 Otherwise                          /* line is shorter than max.  */
0033 Nop                              /* ignore                     */
0034 End
0035 End
0036 If mem.0>0 Then Do
0037 Say 'Maximum line length='maxl
0038 Say ' Line Contents'
0039 Do i=1 To mem.0
0040 Say right(lin.i,5) mem.i
0041 End
0042 End
0043 Else
0044 Say 'No lines in input file or file does not exist'
