0001 /*REXX program converts decimal number ───► binary ───► gray code ───► binary.*/
0002 parse arg N .                          /*get the optional argument from the CL*/
0003 if N==''  | N==","   then N=31         /*Not specified?  Then use the default.*/
0004 L=max(1,length(strip(x2b(d2x(N)),'L',0)))   /*find the max binary length of N.*/
0005 w=14                                   /*used for the formatting of cell width*/
0006 _=center('binary',w,'─')               /*the  2nd and 4th  part of the header.*/
0007 say center('decimal', w, "─")'►'     _"►"    center('gray code', w, '─')"►"    _
0008 /* [+]  the output header*/
0009 do j=0  to N;     b=right(x2b(d2x(j)),L,0)      /*process   0  ──►  N.   */
0010 g=b2gray(b)                       /*convert binary number to gray code.  */
0011 a=gray2b(g)                       /*convert the gray code to binary.     */
0012 say center(j,w+1)   center(b,w+1)   center(g,w+1)   center(a,w+1)
0013 end   /*j*/
0014 exit                                   /*stick a fork in it,  we're all done. */
0015 /*────────────────────────────────────────────────────────────────────────────*/
0016 b2gray: procedure; parse arg x 1 $ 2;    do b=2  to length(x)
0017 $=$||(substr(x,b-1,1) && substr(x,b,1))
0018 end   /*b*/
0019 return $
0020 /*────────────────────────────────────────────────────────────────────────────*/
0021 gray2b: procedure; parse arg x 1 $ 2;    do g=2  to length(x)
0022 $=$ || (right($,1)    && substr(x,g,1))
0023 end   /*g*/        /*  ↑  */
0024 /*  │  */
0025 return $           /*this is an eXclusive OR  ►─────────┘  */
