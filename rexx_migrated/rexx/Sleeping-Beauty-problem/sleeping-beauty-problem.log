0001 /*REXX pgm uses a Monte Carlo estimate for the results for the Sleeping Beauty problem. */
0002 parse arg n seed .                               /*obtain optional arguments from the CL*/
0003 if n==''  |  n==","     then n= 1000000          /*Not specified?  Then use the default.*/
0004 if datatype(seed, 'W')  then call random ,,seed  /*    Specified?  Then use as RAND seed*/
0005 awake= 0                                         /*     "        "    "   "   awakened. */
0006 do #=0  for n                         /*perform experiment:  1 million times?*/
0007 if random(,1)  then awake= awake + 1  /*Sleeping Beauty  is   awoken.        */
0008 else #= # + 1          /*   "        "   keeps sleeping.      */
0009 end   /*#*/                           /* [↑]  RANDOM returns:    0  or  1    */
0010 
0011 say 'Wakenings over '     commas(n)     " repetitions: "      commas(#)
0012 say 'The percentage probability of heads on awakening: '      (awake / # * 100)"%"
0013 exit 0                                           /*stick a fork in it,  we're all done. */
0014 /*──────────────────────────────────────────────────────────────────────────────────────*/
0015 commas: parse arg ?;  do jc=length(?)-3  to 1  by -3; ?=insert(',', ?, jc); end;  return ?
